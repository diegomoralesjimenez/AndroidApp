<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteClear"
    android:paddingLeft="45dp"
    android:paddingTop="30dp"
    android:paddingRight="45dp"
    android:paddingBottom="50dp"
    tools:context=".Ahorro"
    android:id="@+id/fragment_ahorro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:layout_marginBottom="15sp"
            android:animationCache="true"
            android:background="@drawable/btn_round"
            android:orientation="vertical"
            android:paddingLeft="15sp"
            android:paddingTop="25sp"
            android:paddingRight="15sp"
            android:paddingBottom="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:text="Ahorro Total"
                    android:textColor="#6AFFFFFF" />

            </LinearLayout>

            <TextView
                android:id="@+id/ahorroTotal"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ahorroBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:backgroundTint="#FFE7AB"
                android:fontFamily="@font/roboto_black"
                android:text="Comenzar Ahorro"
                android:textAllCaps="false"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="138dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round2"
                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="15sp">

                    <ImageButton
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_forest_24" />

                    <TextView
                        android:id="@+id/montoNavideno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_black"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ahorroNavideno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="NavideÃ±o" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="138dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round2"
                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="15sp">

                    <ImageButton
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_school_24" />

                    <TextView
                        android:id="@+id/montoEscolar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_black"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ahorroEscolar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Escolar" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="138dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round2"
                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="15sp">

                    <ImageButton
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/baseline_directions_car_24" />

                    <TextView
                        android:id="@+id/montoMarchamo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_black"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ahorroMarchamo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Marchamo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="309dp"
                    android:layout_height="138dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round2"
                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="15sp">

                    <ImageButton
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="4sp"
                        android:layout_weight="1"
                        android:background="@drawable/outline_savings_24" />

                    <TextView
                        android:id="@+id/montoExtraordinario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_black"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/ahorroExtraordinario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Extraordinario" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>