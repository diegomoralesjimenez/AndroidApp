<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="@color/whiteClear"
    tools:context=".newClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingTop="30dp"
        android:paddingRight="45dp"
        android:paddingBottom="50dp"
        tools:ignore="TextSizeCheck">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="@string/nuevo_cliente"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/cedula"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/cedula"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="120dp"
                android:layout_height="49dp"
                android:layout_marginRight="10dp"
                android:background="#EE000000"
                android:backgroundTint="#75E6E4E4"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:paddingLeft="25dp"
                android:textColor="#000000"
                android:textColorHint="#7C000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/apellidos"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="#EE000000"
                android:backgroundTint="#75E6E4E4"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:paddingLeft="25dp"
                android:textColor="#000000"
                android:textColorHint="#7C000000"
                android:textSize="14sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:autofillHints=""
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/contraseña"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        <EditText
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Direcion"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        <EditText
            android:id="@+id/fechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Fecha de Nacimiento"
            android:inputType="date"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Estado Civil"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/soltero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soltero"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

            <RadioButton
                android:id="@+id/casado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casado"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
        </RadioGroup>

        <EditText
            android:id="@+id/txtSalario"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="20dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Salario"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:paddingBottom="4dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:fontFamily="@font/roboto_black"
            android:text="Agregar"
            android:textAllCaps="false"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

    </LinearLayout>

</FrameLayout>