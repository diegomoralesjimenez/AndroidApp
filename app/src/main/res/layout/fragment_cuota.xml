<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuota"
    android:background="@color/whiteClear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Calcular Cuota"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Salario"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="326dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Salario"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Prestamo"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextPrestamo"
            android:layout_width="326dp"
            android:layout_height="47dp"
            android:layout_marginBottom="20dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Prestamo"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="326dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Tipo de credito"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="H" />

            <Button
                android:id="@+id/button81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text="E" />

            <Button
                android:id="@+id/button91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text="V" />

            <Button
                android:id="@+id/button101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text="O" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Duracion del prestamo"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="aÃ±os"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:text="1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:text="3"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:text="5"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:text="10"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Tasa de Interes"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="326dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:background="#EE000000"
            android:backgroundTint="#75E6E4E4"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="7.5%"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:textColorHint="#7C000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:fontFamily="@font/roboto_black"
            android:text="CALCULAR"
            android:textAllCaps="true" />

    </LinearLayout>

</FrameLayout>